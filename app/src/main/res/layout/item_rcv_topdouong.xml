<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:backgroundTint="#FFF5D7">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <ImageView
                android:id="@+id/imgViewSach"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/img"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tvMaDoUong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Mã đồ uống"
                android:layout_toEndOf="@+id/imgViewSach"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#FF5722"/>
            <TextView
                android:id="@+id/tvTenDoUong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Tên đồ uống"
                android:layout_toEndOf="@+id/imgViewSach"
                android:layout_below="@+id/tvMaDoUong"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#FF5722"
                />
            <TextView
                android:id="@+id/tvSoluongmua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:hint="Số lượng mượn"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/imgViewSach"
                android:layout_below="@id/tvTenDoUong"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>